# MCP Senado Federal Configuration

# Server Configuration
MCP_SERVER_NAME=mcp-senado
MCP_SERVER_VERSION=1.0.0
MCP_TRANSPORT=stdio  # Options: stdio, http

# HTTP Server Configuration (when transport=http)
MCP_HTTP_PORT=3000
MCP_HTTP_HOST=0.0.0.0

# Senado Federal API Configuration
SENADO_API_BASE_URL=https://legis.senado.leg.br/dadosabertos
SENADO_API_TIMEOUT=30000  # milliseconds
SENADO_API_MAX_RETRIES=3
SENADO_API_RETRY_DELAY=1000  # milliseconds (exponential backoff)

# Cache Configuration
MCP_CACHE_ENABLED=true
MCP_CACHE_TTL=300000  # 5 minutes in milliseconds
MCP_CACHE_MAX_SIZE=1000  # maximum number of cached entries
MCP_CACHE_CLEANUP_INTERVAL=60000  # 1 minute in milliseconds

# Rate Limiting Configuration
MCP_RATE_LIMIT_ENABLED=true
MCP_RATE_LIMIT_TOKENS=30  # requests per interval
MCP_RATE_LIMIT_INTERVAL=60000  # 1 minute in milliseconds
MCP_RATE_LIMIT_REFILL_RATE=2000  # milliseconds between token refills

# Circuit Breaker Configuration
MCP_CIRCUIT_BREAKER_ENABLED=true
MCP_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5  # failures before opening
MCP_CIRCUIT_BREAKER_SUCCESS_THRESHOLD=2  # successes before closing
MCP_CIRCUIT_BREAKER_TIMEOUT=60000  # 1 minute in milliseconds

# Logging Configuration
MCP_LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARN, ERROR
MCP_LOG_FORMAT=json  # Options: json, text
MCP_LOG_MASK_PII=true  # Mask personally identifiable information

# Security Configuration (for HTTP adapter)
MCP_API_KEY=  # Set this for REST API authentication (optional)
MCP_CORS_ENABLED=true
MCP_CORS_ORIGINS=*  # Comma-separated list of allowed origins

# Development Configuration
NODE_ENV=production  # Options: development, production, test
DEBUG=false

# Cloudflare Workers Configuration (when deploying to Workers)
# These are set via wrangler secrets, not .env
# CLOUDFLARE_ACCOUNT_ID=
# CLOUDFLARE_API_TOKEN=
# MCP_CACHE_KV_NAMESPACE_ID=
# MCP_RATE_LIMIT_KV_NAMESPACE_ID=
